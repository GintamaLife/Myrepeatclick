<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="marong.myrepeatclick.com.MainActivity">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试android组件点击事件"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <marong.myrepeatclick.com.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:rv_alpha="255"
        app:rv_color="#ffffff"
        app:rv_type="rectangle"
        >

        <Button
            android:id="@+id/main_fastbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试快速点击事件"
            android:textColor="#4aa3f7"
            android:textSize="18dp"
            />

    </marong.myrepeatclick.com.RippleView>
    <marong.myrepeatclick.com.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:rv_alpha="255"
        app:rv_color="#ffffff"
        app:rv_type="rectangle"
        >

        <Button
            android:id="@+id/main_Netbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试网络点击事件"
            android:textColor="#4aa3f7"
            android:textSize="18dp"
            />

    </marong.myrepeatclick.com.RippleView>
    <marong.myrepeatclick.com.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:rv_alpha="255"
        app:rv_color="#ffffff"
        app:rv_type="rectangle"
        >

        <Button
            android:id="@+id/main_loginbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试登录点击事件"
            android:textColor="#4aa3f7"
            android:textSize="18dp"
            />

    </marong.myrepeatclick.com.RippleView>
    <marong.myrepeatclick.com.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:rv_alpha="255"
        app:rv_color="#ffffff"
        app:rv_type="rectangle"
        >

        <Button
            android:id="@+id/main_customerutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试定制化点击事件"
            android:textColor="#4aa3f7"
            android:textSize="18dp"
            />

    </marong.myrepeatclick.com.RippleView>

</LinearLayout>
